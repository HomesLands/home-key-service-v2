{
   "compilerOptions": {
      "lib": [
         "es7"
      ],
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": "src",
      "rootDir": "src",
      "strict": false,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "paths": {
         "*": [
            "*"
         ]
      }
   },
   "include": [
      "src/**/*",
      "src/locales/*.json"
   ]
}